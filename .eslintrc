{
  "extends": ["plugin:astro/recommended"],
  "overrides": [
    {
      "files": ["*.astro"],
      "parser": "astro-eslint-parser",
      "parserOptions": {
        "parser": "@typescript-eslint/parser",
        "extraFileExtensions": [".astro"]
      },
      "rules": {}
    },
    {
      "files": ["*.ts", "*.js", "*.mjs"],
      "parser": "@babel/eslint-parser",
      "parserOptions": {
        "sourceType": "module",
        "requireConfigFile": false
      },
      "rules": {}
    }
  ]
}
