---
const { BASE_URL } = import.meta.env;
const reBaseUrl = BASE_URL.replace(/\/$/, '');
const rootUrl = `${reBaseUrl}${reBaseUrl}`;
---

<link
  rel="apple-touch-icon"
  sizes="180x180"
  href={rootUrl + '/apple-touch-icon.png'}
/>
<link
  rel="icon"
  type="image/png"
  sizes="32x32"
  href={rootUrl + '/favicon-32x32.png'}
/>
<link
  rel="icon"
  type="image/png"
  sizes="16x16"
  href={rootUrl + '/favicon-16x16.png'}
/>
<link rel="manifest" href={rootUrl + '/site.webmanifest'} />
