---
import '@styles/global.css';
import Footer from '@components/Footer.astro';
import Header from '@components/Header.astro';
import ThemeScript from '@layouts/ThemeScript.astro';
import GoogleAnalyticsScript from '@layouts/GoogleAnalyticsScript.astro';
import GoogleSearchConsole from './GoogleSearchConsole.astro';
---

<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="shortcut icon"
      type="image/x-icon"
      href={`${import.meta.env.BASE_URL}${
        import.meta.env.BASE_URL
      }/favicon.ico`}
    />
    <link
      rel="icon"
      type="image/x-icon"
      href={`${import.meta.env.BASE_URL}${
        import.meta.env.BASE_URL
      }/favicon.ico`}
    />
    <meta name="generator" content={Astro.generator} />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@48,400,0,0"
    />
    <slot name="meta" />
    <ThemeScript />
    <GoogleAnalyticsScript />
    <GoogleSearchConsole />
  </head>
  <body class="bg-white dark:bg-gray-900 text-black dark:text-white transition">
    <div>
      <div
        class="sticky top-0 border-b border-slate-100 mb-12 bg-white dark:bg-gray-900 transition"
      >
        <div class="container mx-auto max-w-screen-md">
          <Header />
        </div>
      </div>
      <div class="container mx-auto max-w-screen-md px-4">
        <slot />
      </div>
      <Footer />
    </div>
  </body>
</html>
