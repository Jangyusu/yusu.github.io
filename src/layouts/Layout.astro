---
import '@styles/global.css';
import Header from '@components/Header.astro';
import ThemeScript from '@layouts/ThemeScript.astro';
import GoogleAnalyticsScript from '@layouts/GoogleAnalyticsScript.astro';
import GoogleSearchConsole from './GoogleSearchConsole.astro';
import FaviconData from './FaviconData.astro';

interface Props {
  wideScreen?: boolean;
}

const {
  generator,
  props: { wideScreen = false },
} = Astro;
const { SITE_TITLE, SITE_DESCRIPTION } = import.meta.env;
---

<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={generator} />
    <meta name="theme-color" content="#60a5fa" />
    <title>{SITE_TITLE}</title>
    <meta name="title" content={SITE_TITLE} />
    <meta name="description" content={SITE_DESCRIPTION} />
    <meta property="og:title" content={SITE_TITLE} />
    <meta property="og:description" content={SITE_DESCRIPTION} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="twitter:title" content={SITE_TITLE} />
    <meta property="twitter:description" content={SITE_DESCRIPTION} />
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@48,400,0,0"
    />
    <FaviconData />
    <ThemeScript />
    <GoogleAnalyticsScript />
    <GoogleSearchConsole />
  </head>
  <body class="pb-10 bg-white dark:bg-gray-900">
    <div>
      <div class="bg-white dark:bg-gray-900">
        <div
          class:list={[
            'container mx-auto px-8',
            wideScreen ? 'w-screen-xl' : 'max-w-screen-sm',
          ]}
        >
          <Header />
        </div>
      </div>
      <div
        class:list={[
          'container mx-auto px-8',
          wideScreen ? 'w-screen-xl' : 'max-w-screen-sm',
        ]}
      >
        <slot />
      </div>
    </div>
  </body>
</html>
