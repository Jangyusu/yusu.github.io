---
import '@styles/global.css';
import Header from '@components/Header.astro';
import ThemeScript from '@layouts/ThemeScript.astro';
import GoogleAnalyticsScript from '@layouts/GoogleAnalyticsScript.astro';
import GoogleSearchConsole from './GoogleSearchConsole.astro';
import FaviconData from './FaviconData.astro';

interface Props {
  wideScreen?: boolean;
}

const { wideScreen = false } = Astro.props;
---

<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@48,400,0,0"
    />
    <FaviconData />
    <ThemeScript />
    <GoogleAnalyticsScript />
    <GoogleSearchConsole />
    <slot name="meta" />
  </head>
  <body class="bg-white dark:bg-gray-900">
    <div>
      <div
        class="sticky top-0 border-b border-gray-100 mb-12 bg-white dark:bg-gray-900"
      >
        <div
          class:list={[
            'container mx-auto',
            wideScreen ? 'max-w-screen-xl' : 'max-w-screen-sm',
          ]}
        >
          <Header />
        </div>
      </div>
      <div
        class:list={[
          'container mx-auto px-8',
          wideScreen ? 'max-w-screen-xl' : 'max-w-screen-sm',
        ]}
      >
        <slot />
      </div>
    </div>
  </body>
</html>
