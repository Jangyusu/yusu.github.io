---
import HeaderLink from '@components/HeaderLink.astro';
import ThemeSwitcher from '@components/ThemeSwitcher.astro';
---

<header class="mx-auto max-w-screen-lg px-4 py-6">
  <div
    class="flex flex-col gap-y-3 sm:flex-row sm:items-center sm:justify-between relative"
  >
    <div class="flex items-center gap-3">
      <h2
        class="flex items-center bg-gradient-to-br from-sky-500 to-cyan-400 bg-clip-text text-xl font-bold !text-transparent"
      >
        <a href="/yusu.log/">Yusu.log</a>
      </h2>
      <ThemeSwitcher />
    </div>
    <div class="flex items-center gap-x-3">
      <nav class="flex gap-x-3 font-medium text-gray-200">
        <HeaderLink href="posts">Posts</HeaderLink>
        <HeaderLink href="https://github.com/Jangyusu" target="_blank">
          GitHub
        </HeaderLink>
      </nav>
    </div>
  </div>
</header>
