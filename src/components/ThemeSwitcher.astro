<button
  role="checkbox"
  tabindex="0"
  class="theme-switcher cursor-pointer w-11 h-5 bg-gray-200 rounded-full px-1.5 flex items-center justify-end dark:justify-start dark:bg-gray-700 absolute sm:relative top-1 sm:top-auto right-0 sm:right-auto"
>
  <div
    class="w-4 h-4 rounded-full absolute transform transition ease-out bg-white dark:bg-gray-800 left-0.5 translate-x-0 dark:translate-x-6"
  >
  </div>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    class="h-3 w-3 text-white dark:block hidden"
    viewBox="0 0 20 20"
    fill="#FFFFFF"
  >
    <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"
    ></path>
  </svg>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    class="h-3 w-3 text-white dark:hidden block"
    viewBox="0 0 20 20"
    fill="#FFD43B"
  >
    <path
      fill-rule="evenodd"
      d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z"
      clip-rule="evenodd"></path>
  </svg>
</button>

<script>
  import { setStorage } from '@utils/storage';

  const themeSwitcher = document.querySelector('.theme-switcher')!;

  const handleClick = () => {
    document.documentElement.classList.toggle('dark');
    const theme = document.documentElement.classList.contains('dark')
      ? 'dark'
      : 'light';

    setStorage('theme', theme);
  };

  themeSwitcher.addEventListener('click', handleClick);
</script>
